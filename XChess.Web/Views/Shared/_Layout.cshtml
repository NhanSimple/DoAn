<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>XChess</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="#">XChess</a>
        <div class="ms-auto d-flex align-items-center">
            <span class="text-white me-3">Bạn chưa đăng nhập</span>
            <button class="btn btn-outline-light btn-sm me-2">Login</button>
            <button class="btn btn-light btn-sm">Logout</button>
        </div>
    </nav>
    <div id="toast-container"></div>
    <div id="layout-wrapper">
        <div class="main-content">
            <div class="page-content">
                <div class="page-header">


                </div>
                <div>
                    @RenderBody()
                </div>
                <div id="MasterModal" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static" style="z-index:1051">
                </div>
            </div>

            @*<li>@Html.ActionLink("Send Email", "SendEmail", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@

        </div>
        @Html.Partial("_ModalPartial")
    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/assets/appjs")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



</body>


</html>
