<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>XChess</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/play/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="#">XChess</a>
        <div class="ms-auto d-flex align-items-center">
            @if (!User.Identity.IsAuthenticated)
            {
                <span class="text-white me-3">Bạn chưa đăng nhập</span>
                <a href="javascript:void(0)" onclick="CreateAction('/LoginArea/Login/Login')" class="btn btn-outline-light btn-sm me-2">Login</a>
            }
            else
            {
                <span class="text-white me-3">Xin chào, @User.Identity.Name</span>
                <form method="post" action="/Account/Logout" class="me-2 mb-0">
                    <button type="submit" class="btn btn-light btn-sm">Logout</button>
                </form>
            }
        </div>
    </nav>
    <div id="toast-container"></div>

    <div id="layout-wrapper">
        <div class="main-content">
            <div class="page-content">
                <div class="page-header">


                </div>
                <div>
                    @RenderBody()
                </div>
                <div id="MasterModal" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static" style="z-index:1051">
                </div>
            </div>

        </div>
        @Html.Partial("_ModalPartial")
    </div>
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/assets/appjs")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/assets/appjs")
    @Scripts.Render("~/Scripts/Chessjs")
    @Scripts.Render("~/Scripts/ChessBoardjs")
    @RenderSection("scripts", required: false)


</body>
</html>